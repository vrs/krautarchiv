: cascade base
: override title -> {
: $board ~ '/' ~ $thread_id
: }
: override content -> {
: include postform
<hr>
<form id="delform" action="/b/wakaba.pl" method="post">
<article id="thread_<: $thread_id :>" class="thread">
: for $post_list -> $p {
: include post { p => $p }
: }
</article>
<hr>
<div class="page_tools">
: include page_tools
</div>
</form>
: }
